@page
@model WebApplication1.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Account List";
}

<div class="text-center">
    <h1>Account List</h1>

    @if (!string.IsNullOrEmpty(Model.filteredValue) && Model.filteredValue != "All")
    {
        <h2>@Model.filteredValue Accounts</h2>
    }
    else
    {
        <h2>All Accounts</h2>
    }

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Account Number</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Account Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ClientAccountVM)
            {
                <tr>
                    <td><a asp-page="./Detail" asp-route-id="@item.ClientId">Detail</a></td>
                    <td>@Html.DisplayFor(modelItem => item.AccountNum)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AccountType)</td>
                </tr>
            }
        </tbody>
    </table>
</div>